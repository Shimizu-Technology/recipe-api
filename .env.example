# Recipe Extractor API - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# DATABASE (required)
# ============================================
DATABASE_URL=postgresql://user:password@host:5432/database

# ============================================
# OPENAI (required)
# Used for: Whisper transcription, GPT-4o chat, GPT-4o-mini tags/nutrition
# ============================================
OPENAI_API_KEY=sk-...

# ============================================
# OPENROUTER (required)
# Used for: Gemini 2.0 Flash recipe extraction
# Get key at: https://openrouter.ai/
# ============================================
OPENROUTER_API_KEY=sk-or-...

# ============================================
# CLERK AUTH (required)
# Your Clerk frontend API domain
# ============================================
CLERK_FRONTEND_API=your-app.clerk.accounts.dev

# ============================================
# AWS S3 (recommended)
# Used for: Permanent thumbnail storage
# Without this, thumbnails use temporary URLs that expire
# ============================================
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name

# ============================================
# OPTIONAL
# ============================================
ENVIRONMENT=development
